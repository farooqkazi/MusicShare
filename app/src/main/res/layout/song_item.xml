<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:background="@color/md_white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/songs_list_thumbnail"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#212121"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/songs_list_username"
            android:paddingRight="16dp"
            android:layout_alignTop="@+id/songs_list_thumbnail"
            android:layout_toRightOf="@+id/songs_list_thumbnail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#757575"
            android:id="@+id/songs_list_track"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingRight="16dp"
            android:layout_below="@+id/songs_list_username"
            android:layout_alignLeft="@+id/songs_list_username"
            android:layout_alignStart="@+id/songs_list_username"
            android:layout_toRightOf="@+id/songs_list_thumbnail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>